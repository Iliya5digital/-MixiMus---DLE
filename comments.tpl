[aviable=lastcomments]<div class="last__comm-link">{news_title}</div>[/aviable]

<div class="comm__item clearfix">
	<div class="comm__left">
		<img src="{foto}" alt="{login}"/>
	</div>
	<div class="comm__right">
		<div class="comm__one clearfix">
			<span class="comm__author">{author}</span>
			<span>{group-name}</span>
			<span>{date}</span>
		</div>
		<div class="comm__two clearfix">
			{comment}
		</div>
		[signature]<div class="signature clearfix">{signature}</div>[/signature]
		<ul class="comm__three clearfix">
			<li>[reply]Ответить[/reply]</li>
		[group=1]
			<li><b>Только админу</b> {ip}</li>
			<li>[com-edit]Редактировать[/com-edit]</li>
			<li>[com-del]Удалить[/com-del]</li>
			<li>{mass-action}</li>
		[/group]
		</ul>
	</div>
</div>
